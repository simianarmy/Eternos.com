- item = facebook_activity_stream_item
.content
  .title_post Facebook Post
  .image_post
    = image_tag 'fb.png'
  .clearboth
  %p.posted
    - if item.author
      == On #{item.published_at.to_s(:long)}, #{item.author} posted: 
    - else
      == Posted on #{item.published_at.to_s(:long)}
  .message_content
    - if item.thumbnail_url
      = link_to image_tag(item.thumbnail_url, :class => 'pic_message'), item.url
    - elsif item.url
      = link_to item.url, item.url

    %p== #{h item.message}
    .clearboth
    
    %p.posted
      - if item.published_at != item.edited_at
        %br== Edited: #{item.edited_at.to_s(:long)}
  
  %p
  %br
  %a#toggle_common_settings.toggleable{:href=>'#'} Settings
  = render :partial => 'shared/common_settings', :locals => {:object => item}