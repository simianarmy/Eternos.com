!!!
%html{html_attrs('en'), 'xmlns:fb' => "http://www.facebook.com/2008/fbml"}
  %head
    %link{:rel=>"shortcut icon", :type=>"image/vnd.microsoft.icon", :href=>"#{image_path 'favicon.ico'}"}
    %link{:rel=>"icon", :type=>"image/png", :href=>"#{image_path 'favico.png'}"}
    %meta{:'http-equiv' => "X-UA-Compatible", :content => "IE=8"}
    %meta{:'http-equiv'=>"Content-Type", :content=>"text/html; charset=iso-8859-1"}
    %title= "Eternos - " + h(yield(:title) || "Home")
    /[if lte IE 7]
      = stylesheet_link_tag "new_design/styleie7.css"
    /[if lte IE 6]
      = stylesheet_link_tag "new_design/styleie6.css"

    - stylesheet 'reset-fonts-grids', 'member', 'screen', 'application'
    /- stylesheet 'new_member/style'
    - use_lightview
    - use_lowpro
    - use_prototip
    - javascript 'application', 'login'
    
    = yield(:head)
    = yield(:js_libs)
    = yield(:javascript)
  %body
    .header
      %div
        = link_to(image_tag('logo.png', :border => "0"),  root_path)
        = render :partial => 'users/inner_nav'
        %ul
          %li{:class => params[:action] == 'show' ? 'active' : 'inact2'}
            = link_to 'Dashboard', member_home_path
            %span
          %li{:class => params[:action] == 'what' ? 'active' : 'inact2'}
            = link_to 'Life Key', trustees_path
          %li{:class => params[:action] == 'what' ? 'active' : 'inact2'}
            = link_to 'Profile', profile_path

    = yield
    
    = render :partial => 'shared/site_footer' unless @hide_footer
    = render :partial => 'shared/get_satisfaction' unless @hide_feedback
    
    

