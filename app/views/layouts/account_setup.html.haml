%html{html_attrs('en'), 'xmlns:fb' => "http://www.facebook.com/2008/fbml"}
  %head
    %meta{:'http-equiv'=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    / bundle do
    - stylesheet 'member', 'screen', 'application', 'popup', '/javascripts/lightview/css/lightview'
    -# Include javascript libs manually to prevent cacheing that breaks scripts
    - javascript 'account_setup', 'scroller', 'slider'
    = yield(:head)
    = yield(:javascript)
    = javascript_include_tag prototype, scriptaculous, 'lightview/js/lightview'
    / end bundle
  %body
    = yield
    