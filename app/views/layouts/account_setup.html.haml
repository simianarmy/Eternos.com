%html{html_attrs('en'), 'xmlns:fb' => "http://www.facebook.com/2008/fbml"}
  %head
    %meta{:'http-equiv'=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    / bundle do
    - stylesheet 'popup', '/javascripts/lightview/css/lightview'
    -# Include javascript libs manually to prevent cacheing that breaks scripts
    - includes do
      - use_lightview
      - stylesheet 'application'
      - javascript 'account_setup', 'scroller', 'slider'
      
    = yield(:head)
    = yield(:javascript)
    / end bundle
  %body
    = yield
    
