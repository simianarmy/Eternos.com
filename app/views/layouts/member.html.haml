!!!
%html{html_attrs('en')}
  %head
    %link{:rel=>"shortcut icon", :type=>"image/vnd.microsoft.icon", :href=>"#{image_path 'favicon.ico'}"}
    %link{:rel=>"icon", :type=>"image/png", :href=>"#{image_path 'favico.png'}"}
    %meta{:'http-equiv' => "X-UA-Compatible", :content => "IE=8"}
    %meta{:'http-equiv' => "Content-Type", :content=>"text/html; charset=utf-8"}
    %meta{:name=>"keywords", :content=>"#{meta_keywords}"}
    %meta{:name=>"description", :content=>"#{meta_descriptions}"}
    %title= "Eternos Members - " + h(yield(:title) || "Member Home")

    - load_prototype unless @no_prototype
    - use_lightview
    - use_lowpro
    - use_prototip
    - use_timeline
    - javascript 'application', 'login'
    - stylesheet 'application', 'new_design/members', 'new_design/misc-fix'
    
    = yield(:head)
    = yield(:js_libs)
    /- FIX: Doesn't work when put at bottom of <body>
    = yield(:javascript)
    / end bundle
  %body
    .header
      %div
        = render :partial => 'shared/header_logout'
    
        = link_to((image_tag 'logo.png', :border => '0'),  member_home_path)
        = render :partial => 'layouts/member_tabs'
    
    / start content
    #content.page-content.login1
      %fieldset
        / start login1_left
        .login1_left
          %h1 Account Features
          %ul#acct_settings
            %li= link_to_lightview 'Profile', account_settings_path, {:id => 'account-setting'}, {:rel => "'iframe'"}, {:autosize => false, :closeButton => false, :height => 'lightview_height', :width => '800'}
            /-%li= link_to 'Memento Studio', new_memento_path
            %li= recording_popup_link 'Video Journal'
            %li= link_to_lightview 'Upload', new_content_path(:dialog=>true), {}, {:rel => "'iframe'"}, {:autosize => false, :height => '800', :width => '600'}
            %li= link_to 'Life Key', trustees_path
            %li= link_to_lightview 'Images', image_gallery_path, {}, {:rel => "'iframe'"}, {:autosize => false, :height => '800', :width => '800'}
          <p>&nbsp;</p>
          %h1 Backup Services
          %p
            - if @settings.facebook_confirmed
              = backup_icon('facebook', '36x36')
            - else
              = image_tag 'mini-facebook.gif'
            - if @settings.twitter_confirmed
              = backup_icon('twitter', '36x36')
            - else
              = image_tag 'mini-twitter.gif'
            - if @settings.gmail_confirmed
              = backup_icon('gmail', '36x36')
            - else
              = image_tag 'mini-gmail.gif'
            - if @settings.picasa_confirmed
              = backup_icon('picasa', '36x36')
            - else
              = image_tag 'mini-what.gif'
            - if @settings.rss_confirmed
              = backup_icon('rss', '36x36')
            - else
              = image_tag 'mini-rss.gif'
            
          <p align="right">
          = link_to 'Add More', account_setup_path(:step => 0), :id => "active_network-add"
          </p>
          <p>&nbsp;</p>
          /
            %h1 Tag Cloud
            #tag-cloud
          <p>&nbsp;</p>
          #artifacts-header
          <p>&nbsp;</p>         
             
        / end login1_left
        
        / start sub content
        .login1_right.home
          = yield
        / end sub content
    / end content
          
    = render :partial => 'shared/site_footer' unless @hide_footer
    = render :partial => 'shared/get_satisfaction' unless @hide_feedback

    - if @facebook_session
      = fb_connect_javascript_tag
      = init_fb_connect "XFBML"
    :javascript
      // This needs to be global to all js
      var lightview_height = 0.9 * win_dimension()[1];
      //alert('lightview_height = ' + lightview_height);
      Element.observe(window, 'load', function() { 
        handle_timeout_popups(#{session_timeout_seconds});
      });
