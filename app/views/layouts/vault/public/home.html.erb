  		<li class="<%= members_tab_class_active?('accounts') %>"><%= link_to 'Getting Started', new_account_registration_path %><span></span></li>
  	  </ul>
  </div>

  <%= yield %>

  <%= render :partial => 'shared/vault_footer' %>
</body>
</html>
