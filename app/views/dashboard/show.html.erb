<div class='flash_notice' id='notice'></div>
<%= show_flash_messages :fade => 20 %>

<!-- start 7/22/10 updates -->
<% table_info_part('Personal Information') do %>
    <% content_tag(:tr) do %>
        <%= td_thead_tag(148, 'User Name') %>
        <%= td_thead_tag(125, 'Email', true) %>
        <%= td_thead_tag(166, 'Birth Date') %>
        <%= td_thead_tag(145, 'Account Status', true) %>
        <%= td_thead_tag(136) %>
    <% end %>
    <% content_tag(:tr) do %>
        <% content_tag(:td) do %>
            <%= @dashboard.user_name %> <br/> <%= content_tag(:em, "Member For: #{@dashboard.days_signed_up} days") %>
        <% end %>
        <%= content_tag(:td, current_user.email, :align => 'center') %>
        <% content_tag(:td) do %>
            <%= @dashboard.birthday %>
        <% end %>
        <%= content_tag(:td, @dashboard.account_state, :align => 'center') %>
        <%= td_edit_button({:action => 'edit_profile'}) %>
    <% end %>
<% end %>

<% table_info_part('Backup Data') do %>
    <% content_tag(:tr) do %>
        <%= td_thead_tag(116, 'Albums', true) %>
        <%= td_thead_tag(116, 'Photos', true) %>
        <%= td_thead_tag(131, 'Videos', true) %>
        <%= td_thead_tag(116, 'Audio', true) %>
        <%= td_thead_tag(116, 'Emails', true) %>
        <%= td_thead_tag(116, 'RSS Items', true) %>
        <%= td_thead_tag(116, 'Facebook Items', true) %>
        <%= td_thead_tag(116, 'Twitter Items', true) %>
        <%= td_thead_tag(205, 'Total Items Backed Up', true) %>
    <% end %>
    <% content_tag(:tr) do %>
        <%= content_tag(:td, @backup_data[:albums], :align => 'center') %>
        <%= content_tag(:td, @backup_data[:photos], :align => 'center') %>
        <%= content_tag(:td, @backup_data[:videos], :align => 'center') %>
        <%= content_tag(:td, @backup_data[:audio], :align => 'center') %>
        <%= content_tag(:td, @backup_data[:emails], :align => 'center') %>
        <%= content_tag(:td, @backup_data[:rss], :align => 'center') %>
        <%= content_tag(:td, @backup_data[:fb], :align => 'center') %>
        <%= content_tag(:td, @backup_data[:tweets], :align => 'center') %>
        <%= content_tag(:td, @backup_data[:total], :align => 'center') %>
    <% end %>
<% end %>

<% table_info_part('Backup Status') do %>
  <% content_tag(:tr) do %>
    <%= td_thead_tag(116, 'Backup Site', true) %>
    <%= td_thead_tag(116, 'Added on', true) %>
    <%= td_thead_tag(116, 'Most Recent Backup', true) %>
    <%= td_thead_tag(116, 'Status', true) %>
    <%= td_thead_tag(116, 'Options', true) %>
  <% end %>
  <% @dashboard.backup_sites.each do |bs| %>
    <% content_tag(:tr) do %>
       <%= content_tag(:td, bs[:description], :align => 'left') %>
       <%= content_tag(:td, bs[:created_at], :align => 'center') %>
       <%= content_tag(:td, bs[:last_backup_at], :align => 'center') %>
       <%= content_tag(:td, bs[:status], :align => 'center') %>
       <%= content_tag(:td, link_to('Add More', account_setup_path(:step => 0))) %>
    <% end %>
  <% end %>
<% end %>

<h1>Mail Options</h1>
  <p>
    <%= check_box_tag :weekly_email %> Email me weekly backup stats
  </p>
  <p>
    <%= check_box_tag :monthly_email %> Email me monthly backup stats
  </p>
  <p>
    <%= check_box_tag :newsletter %> Send me monthly newsletter
  </p>


