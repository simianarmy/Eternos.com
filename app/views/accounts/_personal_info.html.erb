<%= hidden_submit("submit_form_personal") %>
<%- fields_for @address_book do |ab| %>
  <p>
    <%= ab.label "First Name" %>  
    <%= text_field_submit_onchange(ab, :first_name, "submit_form_personal") %>
  </p>
  
  <p>
    <%= ab.label "Middle Name" %>
    <%= text_field_submit_onchange(ab, :middle_name, "submit_form_personal") %>
  </p>
  <p>
    <%= ab.label "Last Name" %>
    <%= text_field_submit_onchange(ab, :last_name, "submit_form_personal") %>
  </p>
  <p>
    <%= ab.label "Suffix" %>
    <%= text_field_submit_onchange(ab, :name_suffix, "submit_form_personal") %>
  </p>
  <p>
    <%= ab.label "Title" %>
    <%= text_field_submit_onchange(ab, :name_title, "submit_form_personal") %>
  </p>
  <p>
    <%= ab.label "Gender" %>
    <%= radio_submit_onclick(ab, :gender, "male", "submit_form_personal", @address_book.gender) %>Male
    <%= radio_submit_onclick(ab, :gender, "female", "submit_form_personal", @address_book.gender) %>Female
    <%= radio_submit_onclick(ab, :gender, "transgender", "submit_form_personal", @address_book.gender) %>Transgender
  </p>
  <p>
  <%= ab.label "Time Zone"%>
  <%= ab.time_zone_select :timezone, TZInfo::Timezone.all.sort, :default => @address_book.timezone.to_s, :model => TZInfo::Timezone %>
</p>
<%- end -%>


