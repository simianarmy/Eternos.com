<%- fields_for @address_book do |ab| %>
  <p>
    <%= ab.label "Website" %>
    <%= text_field_submit_onchange(ab, :website, "submit_form_personal") %>
  </p>

   <p>
    <%= ab.label "Social security" %>
    <%= text_field_submit_onchange(ab, :ssn_b, "submit_form_personal") %>
  </p>
   <p>
    <%= ab.label "Birthdate" %>
