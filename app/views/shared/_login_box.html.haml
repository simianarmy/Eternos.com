-#.login_link{:style => "float: right"}= link_to('Login', login_path, :onclick => "Effect.BlindDown('login', { duration: 0.2}); $(this).hide(); return false;")
-##login{:style => "display: none"}
#login
  - if current_user
    %p
      %h3 
        Logged in as
        = link_to(facebook_name_or_login(current_user), member_home_path)
        | 
        = link_to('Logout', logout_path)
  - else
    %p= link_to 'forgot password?', new_password_reset_path
    %h3= authlogic_facebook_login_button
    = render :partial => 'shared/secure_login_form'


