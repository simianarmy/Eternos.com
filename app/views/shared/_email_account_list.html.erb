<% unless @contact_emails.blank? %>
  <br />
	<div class="title7">List of your emails</div>
  <table class="table-form6" border="0" cellpadding="0" cellspacing="0">
      <tr bgcolor="#8bcdff">
        <td class="coll-form10" bgcolor="#8bcdff" align="center">Name</td>
        <td class="coll-form11" bgcolor="#8bcdff" align="center">Email</td>
        <td class="coll-form10" bgcolor="#8bcdff" align="center">Action</td>
      </tr>
    <% @contact_emails.each do |contact| -%>
      <tr id="contact-list-<%= contact.id %>">
        <td class="coll-form12" valign="center"><%= restful_in_place_editor(:span, :contact, :name, 
                                        {:value => contact.name,
                                         :id => contact.id,
                                         :url => set_contact_name_account_settings_path(:id => contact.id)})%></td>
        <td class="coll-form13" valign="center">
            <%= restful_in_place_editor(:span, :contact, :email, 
                                        {:value => contact.email,
                                         :id => contact.id,
                                         :url => set_contact_email_account_settings_path(:id => contact.id)})%>
        </td>
        <td class="coll-form12" valign="center"><%= link_to_remote 'Remove', 
                                                      :url => {:action => 'email_account', :id => contact},
                                                      :confirm => 'Are you sure?',
                                                      :with => "'method=delete'", 
                                                      :loading => "$('progress-bar').show();",
                                                      :complete => "$('progress-bar').hide();",
 						      :html => {:class => "blue-btn4"}%>    
        </td>
      </tr>
    <% end %>
  </table>
  <br>
<%= will_paginate(@contact_emails) %>
<% end %>

