<% if @success %>
  <%= javascript_tag("$('step3-button-hide').click();") %>
<%- end -%>

<% if @gmail_accounts.any? %>
  <br />
	<div class="title7">List of your emails</div>
  <table class="table-form6" border="0" cellpadding="0" cellspacing="0">
      <tr bgcolor="#8bcdff">
        <td class="coll-form10" bgcolor="#8bcdff" align="center">Email</td>
        <td class="coll-form11" bgcolor="#8bcdff" align="center">Password</td>
        <td class="coll-form10" bgcolor="#8bcdff" align="center">Action</td>
      </tr>
    <% @gmail_accounts.each do |@contact| -%>
      <tr id="contact-list-<%= @contact.id %>">
        <td class="coll-form12" valign="center"><%= in_place_editor_field(:contact, :auth_login) %></td>
        <td class="coll-form13" valign="center">
            <%= in_place_editor_field(:contact, :auth_password) %>
        </td>
        <td class="coll-form12" valign="center"><%= link_to_remote 'Remove', 
                                                      :url => {:action => 'email_account', :id => @contact},
                                                      :confirm => 'Are you sure?',
                                                      :with => "'method=delete'", 
                                                      :loading => "$('progress-bar').show();",
                                                      :complete => "$('progress-bar').hide();",
 						      :html => {:class => "blue-btn4"}%>    
        </td>
      </tr>
    <% end %>
  </table>
  <br>
<%= will_paginate(@gmail_accounts) %>
<% end %>


