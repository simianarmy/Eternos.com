<% unless @twitter_accounts.blank? %>
  <br>
  <h5>List of Twitter accounts to Backup</h5>
  <table class="table-form6" border="0" cellpadding="0" cellspacing="0">
      <tr bgcolor="#8bcdff">
        <td class="coll-form10" bgcolor="#8bcdff" align="center">Login name</td>
        <td class="coll-form10" bgcolor="#8bcdff" align="center">Action</td>
      </tr>
    <% @twitter_accounts.each do |twitter| -%>
      <tr id="twitter-list-<%= twitter.id %>">
        <td class="coll-form12" valign="center"><%= twitter.auth_login %></td>
        <td class="coll-form12" valign="center"><%= link_to_remote 'Remove', 
                                                      :html => {:class => 'blue-btn4'},
                                                      :url => {:controller => 'backup_sources', :action => 'remove_twitter_account', :id => twitter},
                                                      :confirm => 'Are you sure?',
                                                      :with => "'method=delete'", 
                                                      :loading => "$('progress-bar').show();",
                                                      :complete => "$('progress-bar').hide();" %>    
        </td>
      </tr>
    <% end %>
  </table>
  <br>
<%= will_paginate(@twitter_accounts) %>
<% end %>
