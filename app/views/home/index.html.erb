<% use_lightview %>

<!-- start content -->
<div class="content home">
	<fieldset>
	  <div id="home-flash">
	    <%= image_tag 'image01.jpg', :width=>"493", :height=>"289" %>
	  </div>
	  <h1>Sign up below and start saving your life's moments for generations to come!</h1>
	  <%= render :partial => 'accounts/short_form', :locals => {:plan => AppConfig.default_plan} %>
	  
  	<fieldset>
  		<div class="home02">
  			<h2>Your Life Timeline</h2>
  			<p> All your treasured memories and life events are set to your own easy to use timeline </p>
  			<p><%= link_to 'View Sample', image_path('timeline_sample.png'), :class => 'lightview' %></p>
  		</div>
  		<div class="home03">
  			<h2>Automated Logging</h2>
  			<p>Automatically log <%= render :partial => 'about/backup_sources' %></p>
  			<p><%= link_to 'View Sample', image_path('backup_sample.png'), :class => 'lightview' %></p>
  		</div>
  		<div class="home04">
  			<h2>Life Key</h2>
  			<p>Enables you to designate trustees that will notify Eternos of your passing. Trustees gain access to your account upon confirmation you have passed on</p>
  			<p><%= link_to 'View Sample', image_path('lifekey_sample.png'), :class => 'lightview' %></p>
  		</div>			
  	</fieldset>
		
	</fieldset>
</div>
<!-- end content -->
