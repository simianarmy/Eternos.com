<div id="account-setting-content">
  <div class="title3">Online Account</div>
  <div class="network-icon-box">
    <%#= link_to_show_hide('facebook-box', "", {:class => "fb-btn2"})  %>
        <a herf="#" onclick="$('form-box').show(); $('online_account').value='facebook'" class="fb-btn2"></a>
        <a herf="#" onclick="$('form-box').show(); $('online_account').value='twitter'" class="twitter-btn"></a>
	<a herf="#" onclick="$('form-box').show(); $('online_account').value='flickr'" class="flickr-btn"></a>
	<a herf="#" onclick="$('form-box').show(); $('online_account').value='rss'" class="rss-btn"></a>
  </div>

  <div style="clear:both"></div> 
  
  <div class="network-popup-box"></div>
  <div class="network-login-box" id="form-box" style="display:none;">
    <%= image_tag "errors/fb-top-box.gif" %>
  <form action="/online_account" id='form-online-account' method='post'>
    <%= hidden_field_tag "online_account", "test" %>
      <div class="network-box">
        <table class="table-form2" align="left">
          <tr>
                <td class="coll-form4" valign="center">Username</td>
                    <td class="coll-form2" valign="center">:</td>
                    <td class="coll-form5" valign="center"><input type="textbox" class="textbox1"></td>
              </tr>
              <tr>
            <td class="coll-form4" valign="center">Password</td>
                    <td class="coll-form2" valign="center">:</td>
                    <td class="coll-form5" valign="center"><input type="textbox" class="textbox1"></td>
              </tr>
            </table>
            <table class="table-form3" align="left">
              <tr>
                <td width="100%" align="right"><a href="#" class="submit-btn">Submit</a></td>
              </tr>
            </table>
      </div>
      </form>
    <%= image_tag "errors/fb-box-footer.gif" %>
  </div>
  
</div>