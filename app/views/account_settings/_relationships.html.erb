<% unless relationships.blank? %>
  <% relationships.each do |relationship| -%>
      <table id="<%= dom_id(relationship) %>">
					<tr>
			      <td colspan="3" height="10px" valign="top"><hr class="line2" /></td>
			    </tr>
					<tr>
		        <td class="coll-form6" valign="top">Name</td>
			    	<td class="coll-form2" valign="top">:</td>
			    	<td class="coll-form3" valign="top"><%= relationship.person.name rescue relationship.name %></td>
		      </tr>
					<tr>
		        <td class="coll-form6" valign="top">Description</td>
			    	<td class="coll-form2" valign="top">:</td>
			    	<td class="coll-form3" valign="top"><%= relationship.description %></td>
		      </tr>
					<tr>
		        <td class="coll-form6" valign="top">Start at</td>
			    	<td class="coll-form2" valign="top">:</td>
			    	<td class="coll-form3" valign="top"><%= profile_view_date(relationship.start_at) %></td>
		      </tr>
					<tr>
		        <td class="coll-form6" valign="top">End at</td>
			    	<td class="coll-form2" valign="top">:</td>
			    	<td class="coll-form3" valign="top">
            <%= if relationship.end_at
              profile_view_date(relationship.end_at)
            else
              "To Present"
            end%>
            </td>
            </tr>
					<tr>
		        <td class="coll-form6" valign="top">Notes</td>
			    	<td class="coll-form2" valign="top">:</td>
			    	<td class="coll-form3" valign="top"><%= relationship.notes %></td>
		      </tr>
		      <tr>
		        <td class="coll-form6" valign="top">Photo</td>
			    	<td class="coll-form2" valign="top">:</td>
			    	<td class="coll-form3" valign="top">
			    	<%= image_tag(relationship.person.photo(:thumb)) if relationship.try(:person) && relationship.person.photo_file_name %>
		      </tr>
					<tr>
		        <td class="coll-form6" valign="top"></td>
			    	<td class="coll-form2" valign="top"></td>
			    	<td class="coll-form3" valign="top"><%= link_to_remote 'Remove',
                                                                        :html => {:class => 'remove-btn'},
                                                                        :url => {:action => 'remove_relationship', :id => relationship}, 
                                                                        :confirm => "Are you sure?" %>
                                </td>
		      </tr>
		    </table>
  <% end %>
<% end %>
