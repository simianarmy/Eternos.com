!!!
%html{html_attrs('en'), 'xmlns:fb' => "http://www.facebook.com/2008/fbml"}
  %head
    %link{:rel=>"shortcut icon", :type=>"image/vnd.microsoft.icon", :href=>"#{image_path 'favicon.ico'}"}
    %link{:rel=>"icon", :type=>"image/png", :href=>"#{image_path 'favico.png'}"}
    %meta{:'http-equiv' => "X-UA-Compatible", :content => "IE=8"}
    %meta{:'http-equiv'=>"Content-Type", :content=>"text/html; charset=iso-8859-1"}
    %meta{:name=>"keywords", :content=>"#{meta_keywords}"}
    %meta{:name=>"description", :content=>"#{meta_descriptions}"}
    %title= "Eternos Memento Player"
    /[if lte IE 7]
      = stylesheet_link_tag "new_design/styleie7.css"
    /[if lte IE 6]
      = stylesheet_link_tag "new_design/styleie6.css"

    - stylesheet 'new_design/style.css', 'mementos'
    = yield(:head)
    
  %body
    .header
      %div
        = link_to(image_tag('logo.png', :border => "0"),  root_path)

    <!-- start content -->
    .content.memento-player
      
      %fieldset
        %h1== Memento: #{@memento.title}
        
        %h3== Created by #{@memento.member.full_name} on #{@memento.created_at.strftime('%x')}
        #loading-indicator
          %h3 
            %strong LOADING MEMENTO...PLEASE WAIT
        #movie_pane.theme-default
          #movie_player
              
        #flash_notice.notice{:style => "display: none;"}
        
        .memento-player-bottom
          %h4 Create Your Own Eternos Memento Now, Simply Sign-Up For Free!
          = render :partial => 'accounts/short_form', :locals => {:plan => AppConfig.default_plan, :page => 'mementos'} 
          
    = render :partial => 'shared/site_footer' unless @hide_footer

    = javascript_include_tag "jquery.tools.min", "application_jquery", "prototype", "scriptaculous",  "effects", "controls", "flowplayer-3.1.4.min", "flowplayer.playlist-3.0.7", 'soundmanager2-nodebug-jsmin', 'application', 'mementos/editor', 'mementos/player'
    = fb_connect_javascript_tag
    = init_fb_connect "XFBML"
    
    :javascript
      var FlowplayerSwfUrl = '#{video_player_swf_url}';
      var FLOWPLAYER_PRODUCT_KEY = '#{FLOWPLAYER_PRODUCT_KEY}';
      var editor;
      
      jQuery(document).ready(function() {
        mem = MementoPlayer.init('#{escape_javascript(@memento.title)}', #{@slides.to_json}, #{@sounds.to_json});
      });