.decoration_item.artifact.video{:id=> dom_id(item), :src => item.url}
  - if item.thumbnail_url
    = image_tag item.thumbnail_url
  - else
    = image_tag item.content_icon
  %br
  %span.title= truncate(item.title, :length => 20)
  .info.title.hidden
    = item.title
    = item.description
    = item.duration_to_s
    