#!/usr/bin/env ruby
# 
# $Id$
# Munin plugin
# Counts running backup jobs

REQUEST_URI = 'http://beta.eternos.com/admin/munin/running_backup_jobs?api=FL1mFl4mAlamB'

def output_config
  puts <<-END
graph_category Eternos.com
graph_title running backups
graph_vlabel count

facebook.label Facebook
twitter.label Twitter
gmail.label Gmail
blog.label RSS
picasa.label Picasa
END
  exit 0
end

def output_values
  status = `curl -s #{REQUEST_URI}`
  
  unless $?.success?
    $stderr.puts "failed executing live_backups"
    exit 1
  end
  %w( facebook twitter gmail blog picasa ).each do |site|
    status =~ /#{site}\s+=\s+(\d+)/
    puts "#{site}.value #{$1}"
  end

end

if ARGV[0] == "config"
  output_config
else
  output_values
end